<Window x:Class="UserLogin.TextRedactor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserLogin"
        mc:Ignorable="d"
        Title="TextRedactor" Height="800" Width="1600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="3" Margin="5,5,5,5">
            <TextBox x:Name="RedactText" FontSize="25" TextWrapping="Wrap" Language="ru-ru"/>
        </ScrollViewer>
        <Button Grid.Row="0" Grid.Column="0" Margin="55" FontSize="30" Content="Сохранить текст" Click="ButtonRead_OnClick"/>
        <Button Grid.Row="0" Grid.Column="1" Margin="55" FontSize="30" Content="Открыть текст" Click="ButtonWrite_OnClick"/>
        <Button Grid.Row="0" Grid.Column="3" Margin="55" FontSize="28" Content="Открыть калькулятор" Click="CalculatorOpen_OnClick"/>
    </Grid>
</Window>
